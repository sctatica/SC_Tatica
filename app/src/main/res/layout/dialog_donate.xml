<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/donateVia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Donate via"
            android:textColor="@color/SC_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donateVia"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Link to donate"
            android:textStyle="italic" />

        <View
            android:layout_width="70dp"
            android:layout_height="0.5dp"
            android:layout_below="@+id/txtLink"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="#c0c0c0" />

        <TextView
            android:id="@+id/convert_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLink"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="Contribute your work time"
            android:textColor="@color/SC_color"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:inputType="number"
            android:id="@+id/edtConvertTime"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/convert_time"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:hint="max time"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtConvertMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtConvertTime"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/VND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtConvertTime"
            android:layout_marginStart="200dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/txtConvertMoney"
            android:text="VND" />

        <Button
            android:id="@+id/btnDonate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtConvertMoney"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/SC_color3"
            android:text="donate" />
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>


